{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "typedocOptions": {
    "out": "docs",
    "entryPoints": "src",
    "exclude": ["**/*.test.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*.test.ts"]
}
